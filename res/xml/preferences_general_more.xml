<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:enabled="false"
        android:key="@string/Preference_UseCamera2Key"
        android:summary="@string/Pref_Common_UseCamera2_Summary"
        android:title="@string/Pref_Common_UseCamera2_Title" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/Preference_CaptureRAWValue"
        android:summary="@string/Pref_Common_CaptureRAW_Summary"
        android:title="@string/Pref_Common_CaptureRAW_Title" />
    
    <!-- -+-  -->
    <PreferenceScreen
        android:fragment="com.almalence.opencam.Fragment"
        android:summary="@string/Pref_SaveConfiguration_Summary"
        android:title="@string/Pref_SaveConfiguration_Title" >
        <extra
            android:name="type"
            android:value="save_configuration" />
    </PreferenceScreen>
