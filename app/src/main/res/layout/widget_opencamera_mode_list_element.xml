<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/modeListElementLayout"
    android:orientation="horizontal"
    android:layout_width="@dimen/widgetListElementWidth"
    android:layout_height="@dimen/widgetListElementHeight"      
    android:layout_gravity="center"
    android:padding="3dp"    
    android:background="@drawable/widget_mode_list_button_background">
    
    <RelativeLayout android:id="@+id/imageLayout"
        			android:layout_height="@dimen/widgetListImageHeight"
        			android:layout_width="@dimen/widgetListImageWidth"
        			android:layout_gravity="center"
        			android:layout_alignParentLeft="true">  
    <ImageView
        android:id="@+id/modeImage"
        android:layout_width="@dimen/widgetListImageWidth"
        android:layout_height="@dimen/widgetListImageHeight"
        android:layout_centerInParent="true"        
        android:padding="5dp"                
        android:background="@android:color/transparent">
    </ImageView>
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/textLayout"
        			android:layout_height="@dimen/widgetListElementHeight"
        			android:layout_width="match_parent"
        			android:background="@android:color/transparent"
        			android:layout_toRightOf="@+id/imageLayout">        			
    <TextView
        android:id="@+id/modeText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"        
        android:textSize="@dimen/widgetTextSize">
    </TextView>
    
    </RelativeLayout>
   
</RelativeLayout>

