<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/modeSelectLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"    
    >
    <RelativeLayout android:id="@+id/modeSelectLayout2"
        			android:layout_height="@dimen/gridModeImageSize2x"
	        		android:layout_width="@dimen/gridModeImageSize2x"
        			android:background="@drawable/underlayer"
        			android:layout_centerInParent="true">
     
	    <ImageView
	        android:id="@+id/modeImage"
	        android:layout_height="@dimen/gridModeImageSize"
	        android:layout_width="@dimen/gridModeImageSize"
	        android:paddingTop="10dp"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:background="@android:color/transparent"        
	        >
	    </ImageView>
	     
	    <RelativeLayout android:id="@+id/textLayout"
	        			android:layout_height="wrap_content"
	        			android:layout_width="fill_parent"
	        			android:layout_below="@+id/modeImage"
	        			android:layout_centerInParent="true">
	    <TextView
	        android:id="@+id/modeText"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:textColor="@android:color/white"        
	        android:textSize="@dimen/gridModeTextSize">
	    </TextView>
	    
	    </RelativeLayout>
	    
	</RelativeLayout>
     
</RelativeLayout>