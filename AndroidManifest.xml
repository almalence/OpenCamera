        		<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
    		</intent-filter>
		</activity>
		
		<activity android:name="com.almalence.widget.OpenCameraSolidWidgetConfigureActivity"
   	    		  android:label="@string/app_name"
